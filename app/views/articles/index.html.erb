<%=tinymce_assets%>
<h1>Listing articles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
    <div id=articles>
     <% @articles.each do |article| %>
      <div id= edit_article_<%=article.id%>>
       <%= render "article" ,:article => article %>    
       <br>
      </div>
     <% end %>
    </div>
    </tr>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_article_path ,id: "new_link",remote: true %>
