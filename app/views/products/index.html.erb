<h1>Listing products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
    <div id=products>
     <% @products.each do |product| %>
      <div id= edit_product_<%=product.id%>>
       <%= render "product" ,:product => product %>    
       <br>
      </div>
     <% end %>
    </div>
    </tr>
  </tbody>
</table>

